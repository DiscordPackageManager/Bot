{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ESNext",
    "outDir": "dist",
    "sourceMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "declaration": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@interfaces": ["Interfaces"],
      "@events/*": ["Events/*"],
      "@commands/*": ["Commands/*"],
      "@client": ["Client/"]
    }
  },
  "include": ["./src"],
  "exclude": ["./node_modules"]
}